    "clean": "rimraf dist ",
    "build": "rimraf dist && microbundle",
    "dev": "microbundle watch",
    "test:treeshake": "agadoo dist stimulus-library.js"
  },
  "dependencies": {
    "@types/lodash": "^4.14.168",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "lodash": "^4.17.20",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "peerDependencies": {
    "stimulus": "^2.0.0"
  },
  "devDependencies": {
    "agadoo": "^2.0.0",
    "docsify": "^4.11.6",
    "microbundle": "^0.13.0",
    "rimraf": "^3.0.2",
    "stimulus": "^2.0.0",
    "stimulus-use": "^0.22.1"
  }
}
